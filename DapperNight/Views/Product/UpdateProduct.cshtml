@model DapperNight.Dtos.ProductDtos.GetByIdProductDto
@{
    Layout = null;
}


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />
    <form method="post">
        <label>Ürün Id</label>
        <input type="text" asp-for="ProductId" class="form-control" />
        <br />
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Stok Sayısı</label>
        <input type="text" asp-for="stock" class="form-control" />
        <br />
        <label>Ürünün fiyatı</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />
        <label>Category Id</label>
        <input type="text" asp-for="CategoryId" class="form-control" />
        <br />
        <button class="btn btn-primary">Ürünü Güncelle</button>
    </form>
</div>
